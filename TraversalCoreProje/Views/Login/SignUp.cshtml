@model TraversalCoreProje.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Traversal Rezervasyon</h5>
							<h3>Hesap Oluşturun </h3>
							<p>
								Birbirinden deneyimli rehberlerimiz eşliğinde İskandinav ülkelerinin soğuğunda, Akdeniz Ülkelerinin										sıcaklığını, güzel üklemizin Kapadokya'dan Sürmene'ye, Ölüdeniz'den Asos'a, Balkan Turundan Mısır Çöllerine								kadar aklınıza gelen her yere bir tık uzaktasınız. Seyehatlerimize katılmak için hemen kayıt olun.
							</p>
							<a href="#" class="read-more-1 btn">Hadi Başlayalım</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
						<p>Hemen ücretsiz hesap oluşturun :)</p>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Adınız</label>
							<input type="text"  asp-for="Name" />
							<span asp-validation-for="Name" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text" asp-for="Surname" />
							<span asp-validation-for="Surname" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Kullanıcı Adınız</label>
							<input type="text" asp-for="Username" />
							<span asp-validation-for="Username" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Mail adresiniz</label>
							<input type="email" asp-for="Mail" />
							<span asp-validation-for="Mail" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Şifreniz</label>
							<input type="password" asp-for="Password" />
							<span asp-validation-for="Password" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Şifre tekrar</label>
							<input type="password" asp-for="ConfirmPassword" />
							<span asp-validation-for="ConfirmPassword" style="color:red"></span>
						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly">

						</div>
						<label class="container">
							<a href="#">Şartları</a> okudum. Kabul Ediyorum
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Kayıt Ol</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year | Tüm Hakları Saklıdır 
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>